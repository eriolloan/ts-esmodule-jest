{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"module": "ES2020",
		"moduleResolution": "Node",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"**/*.test.ts",
	]
}